<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="category">

	<select id="findCategoryInfo" parameterType="map" resultType="categoryvo">
				<![CDATA[
					select no, name, description, blog_id as blogId, (select count(*)
													from post a, category b
													where a.category_no = b.no
													group by b.no) as postCount
					 from category
                     where blog_id= #{id }
                     order by no; 			 	

				]]>
	</select>
	
	<insert id="insertCategory" parameterType="categoryvo">
		<![CDATA[
			insert
		  	into category
			values (null,#{name }, #{description }, #{blogId })
		]]>
	</insert>
	
</mapper>